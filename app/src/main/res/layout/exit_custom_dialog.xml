<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/exit_cd_container">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exitCD_title"
        android:src="@drawable/exit_cd_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exitCD_txt_msg"
        android:text="Oyundan çıkmak istediğinize emin misiniz?"
        android:fontFamily="@font/letters"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/kahve"
        app:layout_constraintTop_toBottomOf="@+id/exitCD_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/exitCD_butonlarLinearLayout"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exitCD_butonlarLinearLayout"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exit_cd_btn_evet"
            android:background="@drawable/exit_customdialog_btn_evet_bg"
            android:layout_marginEnd="30dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exit_cd_btn_hayir"
            android:background="@drawable/exit_customdialog_btn_hayir_bg"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>